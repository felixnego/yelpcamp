<%- include("partials/header") %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp</h1>
        <div class="container">
            <p>View our hand-pick campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach((camp) => { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= camp.image %>" alt="">
                <div class="caption">
                    <h4><%= camp.name %></h4>
                </div>
                <p>
                    <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">More Info</a>
                </p>
            </div>
            
        </div>
    <% }); %>
    </div>
</div>

<%- include("partials/footer") %>