<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.image %>" alt="">
                <div class="caption-full">
                    <h4 class="pull-right">Sample Price $</h4>
                    <h4><a href=""><%= campground.name %></a></h1>
                    <p><%= campground.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <p>
                        <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add Comment</a>
                    </p>
                </div>
                <hr>
                    <% campground.comments.forEach(comm => { %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comm.author %></strong>
                                <span class="pull-right">10 days ago</span>
                                <p> <%= comm.text %></p>
                            </div>
                        </div>
                    <% }) %>
            </div>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>